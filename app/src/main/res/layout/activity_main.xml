<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        app:layout_constraintVertical_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/tab_layout01"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/tab_img1"
                android:src="@drawable/tab1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tab_text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="聊天"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_layout02"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/tab_img2"
                android:src="@drawable/tab2"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tab_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="联系人"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_layout03"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/tab_img3"
                android:src="@drawable/tab3"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tab_text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="发现"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_layout04"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/tab_img4"
                android:src="@drawable/tab4"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/tab_text4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>